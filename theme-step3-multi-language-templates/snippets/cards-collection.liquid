<section class="products">
	<div class="container">
		<div class="row">
			{% for product in cards-collection %}
				<div class="col-3">
					<div class="card">
						<div class="card-block">
							{% include 'lang_param' %}
							<a href="/products/{{ product.handle }}{{ lang_param }}">
								<img class="card-img-top img-fluid" src="{{ product.images[0] | img_url: "master" }}">
							</a>
							<h3 class="card-title mt-4">{{ product.title }}</h3>
							<p class="card-text">{{ product.description }}</p>
							<h5>
								<span class="price">{{ product.price | money }}</span>
								<small class="text-muted ml-2 euro"></small>
							</h5>
							<a href="/products/{{ product.handle }}{{ lang_param }}" class="btn btn-primary mt-3">Details</a>
						</div>
					</div>
				</div>
			{% endfor %}
		</div>
	</div>
</section>
